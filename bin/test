#!/bin/bash
USER="$2"
if [ -z "$USER" ];
then
    USER="www-data"
fi

FILTER="$1"
if [[ -z "$FILTER" || "$FILTER" == "all" ]]; then
    sudo su -s /bin/bash -c "./vendor/bin/phpunit --stop-on-failure --stop-on-error" $USER
else
    sudo su -s /bin/bash -c "./vendor/bin/phpunit --filter=$FILTER  --stop-on-failure --stop-on-error" $USER
fi
